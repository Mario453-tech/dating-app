{% extends 'base.html.twig' %}

{% block title %}Reset hasła{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="h3 mb-3">Reset hasła</h1>
                    <p>Wprowadź swój email lub nazwę użytkownika, a wyślemy Ci link do zresetowania hasła.</p>

                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.identifier) }}

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">
                                Wyślij email resetujący hasło
                            </button>
                        </div>
                    {{ form_end(requestForm) }}

                    <div class="mt-3">
                        <a href="{{ path('app_login') }}">Powrót do logowania</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
